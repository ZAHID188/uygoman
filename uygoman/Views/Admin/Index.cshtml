@model IEnumerable<uygoman.Models.Admin>


@*<h2>Admin</h2>*@
<br /><br />


<div class="container p-3">
    <div class="text-center row pt-4">
        <div class="col-md-12">
            <h2 class="text-primary">Admin List</h2>
        </div>
        <div class="col-md-6">
            @*<a asp-controller="Admin" asp-action="Create" class="btn btn-primary">
                New Admin
            </a>*@
        </div>
    </div>

    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width100%">
            <thead>
                <tr>
                    <th>
                        User ID
                    </th>
                    <th>
                        Password
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.UserID</td>
                        <td width="30%">@obj.Password</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-controller="Admin" asp-route-idnum="@obj.ID" asp-action="Edit" class="btn btn-primary">
                                    Edit
                                </a>
                                <a asp-controller="Admin" asp-route-idnum="@obj.ID" asp-action="Delete" class="btn btn-danger">
                                    Delete
                                </a>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No category</p>
    }

</div>



