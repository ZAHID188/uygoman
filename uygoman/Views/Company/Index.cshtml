@*Index*@

@model IEnumerable<uygoman.Models.CompanyReg> 






@{
    Layout = "_Layout2";
}


<br /><br />




<div class="container p-3">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2 class="text-primary">Company Informations</h2>
        </div>
        <div class="col-md-6">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                New Company
            </a>
        </div>
    </div>


    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width100%">
            <thead>
                <tr>

                    <th>Company Name</th>
                    <th>Company Arabic name</th>
                    <th>Company Brand name</th>
                    <th>Email</th>
                    <th>Phone number</th>
                    <th>Contact person</th>
                    <th>Upload Documents</th>
                    <th>

                    </th>


                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.CmpName</td>
                        <td>@obj.CmpArabicName</td>
                        <td>@obj.CmpBrandName</td>
                        <td>@obj.Email</td>
                        <td>@obj.Phone</td>
                        <td>@obj.ContactPerson</td>
                        <td>@obj.Upload</td>


                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-controller="Company" asp-route-idnum="@obj.ID" asp-action="Edit" class="btn btn-primary">
                                    Edit
                                </a>
                                <a asp-controller="Company" asp-route-idnum="@obj.ID" asp-action="Delete" class="btn btn-danger">
                                    Delete
                                </a>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No category</p>
    }

</div>



