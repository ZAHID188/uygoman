@model uygoman.Models.Admin
@{
    ViewData["Title"] = "Login";
}
@{
    Layout = "";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">







<div class="container border-6" style="width:30%">
    <h2 align="center">Login</h2>


    <div class="text-center">
        <img src="https://www.uygoman.com/images/logo.png" style="width: 185px;" alt="logo">
        <h4 class="mt-1 mb-5 pb-1">United Young Generation</h4>
    </div>
    <br />

    <form method="post" asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="form-outline mb-4">
            <label asp-for="UserID"></label>
            <input asp-for="UserID" class="form-control" placeholder="User Id" />
            <span asp-validation-for="UserID" class="text-danger"></span>


        </div>

        <div class="form-outline mb-4">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>



        </div>
        <input type="submit" class="btn btn-info" value="Login" />

        @*<div class="text-center pt-1 mb-5 pb-1">
                <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="button">Log in</button>
                <a class="text-muted" href="#!">Forgot password?</a>
            </div>*@

        @*<div class="d-flex align-items-center justify-content-center pb-4">
                <p class="mb-0 me-2">Don't have an account?</p>
                <button type="button" class="btn btn-outline-danger">Create new</button>
            </div>*@

    </form>

</div>

@section Scripts{
    @{ <partial name="_ValidationScriptsPartial"></partial> }
}
