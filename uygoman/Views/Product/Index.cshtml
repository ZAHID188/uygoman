@*Index*@

@model IEnumerable<uygoman.Models.Product>






@{
    Layout = "_Layout2";
}


<br /><br />




<div class="container p-3">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2 class="text-primary">Products</h2>
        </div>
        <div class="col-md-6">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                New Product
            </a>
        </div>
    </div>


    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width100%">
            <thead>
                <tr>

                    <th>Product Name</th>
                    <th></th>

                    


                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.ProductName</td>
                        


                        <td class="text-center">
                            <div class="btn-group" role="group">
                                @*<a asp-controller="Product" asp-route-idnum="@obj.ProductName" asp-action="Edit" class="btn btn-primary">
                                    Edit
                                </a>*@
                                <a asp-controller="Product" asp-route-idnum="@obj.ProductName" asp-action="Delete" class="btn btn-danger">
                                    Delete
                                </a>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No category</p>
    }

</div>



